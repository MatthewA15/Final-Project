<!DOCTYPE html>
<!-- HTML5 -->
<html>
<head>
    <title><%= title %></title> 
    <!-- CSS files for styling -->
    <link rel='stylesheet' href='/Content/app.css' /> <!-- Main custom CSS file -->
    <link rel='stylesheet' href='/bootstrap/dist/css/bootstrap.min.css' /> <!-- Bootstrap CSS for styling and layout -->
    <link rel='stylesheet' href='/@fortawesome/fontawesome-free/css/all.min.css' /> <!-- Font Awesome for icons -->
</head>
<body>
    <!-- Navigation bar section -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <!-- Brand name updated to 'Coding Insurance' -->
        <a class="navbar-brand" href="/">Coding Insurance</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Updated Navigation links -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/about">About Us</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/services">Services</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/claims">Claims</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/contact">Contact Us</a>
            </li>
          </ul>
        </div>
      </div>
    </nav> <!-- End of the navigation bar -->
    <!-- Main content area -->
    <div class="container mt-4">
      <h2>View Claims</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Claim Number</th>
            <th>Policy Number</th>
            <th>Occurance Date</th>>
          </tr>
        </thead>
        <tbody>
          <% claims.forEach(function(claim) { %>
            <tr>
              <td><%= claim.number %></td>
              <td><%= claim.policyNumber %></td>
              <td><%= claim.occuranceDate %></td>
              
              <td><a href="/claims/edit/<%= claim._id %>">Edit</a></td>
              <td>
                <form action="/claims/delete/<%= claim._id %>" method="post" onsubmit="return confirmDelete();">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <!-- Delete confirmation -->
    <script>
      function confirmDelete() {
        return confirm("Are you sure you want to delete this item?");
      }
    </script>
    <!-- Social media links -->
    <div class="socials" style="text-align: center;">
        <a href="https://www.linkedin.com/in/matthew-allicock-9026b0233/" target="_blank">LinkedIn</a>
        <a href="https://github.com/MatthewA15/3Assignment.git" target="_blank">GitHub</a>
    </div>
</body>
</html>
